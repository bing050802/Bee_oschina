<?xml version="1.0" encoding="utf-8" ?>
<ui namespace="AppTabbar_iPhone">

    <linear class="wrapper" orientation="h">
		<image id="bg"/>
		<linear id="first" class="item-wrapper" orientation="h">
			<image id="first-bg" class="item-active-bg"></image>
			<button id="first" class="item-icon">First</button>
		</linear>
		<linear id="second" class="item-wrapper" orientation="h">
			<image id="second-bg" class="item-active-bg"></image>
			<button id="second" class="item-icon">Second</button>
		</linear>
		<linear id="third" class="item-wrapper" orientation="h">
			<image id="third-bg" class="item-active-bg"></image>
			<button id="third" class="item-icon">Third</button>
		</linear>
    </linear>

    <style type="text/css">
		#bg {
			background-color: #333;
			image: url(tab-bar.png) !important;
			image-insets: 0 25;
			image-mode: fit;
			position: absolute;
			left: 0;
			top: 0;
		}

        .wrapper {
			width: 100%;
			height: 100%;
			float: center;
        }

		.item-wrapper {
			width: 34%;
			height: 100%;
		}

		.item-active-bg {
			background-color: #666;
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0;
			top: 0px;
			image-src: url(tab-item.png);
		}
		
		.item-icon {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}

    </style>
</ui>
